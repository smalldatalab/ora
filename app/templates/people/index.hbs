<header>
    <a class="icon-button" {{action 'openModal' 'drawer'}}><i class="fa fa-4x fa-fw fa-bars"></i></a>
    <div class="mid-text">ora</div>
    {{#link-to 'people.add' class="icon-button"}}<i class="fa fa-4x fa-fw fa-plus-circle"></i>{{/link-to}}
</header>

<ul class="members">
    {{#each person in model}}
        <li>
            {{#link-to 'person' person.id replace=true}}
            <span class="title">{{person.name}}</span>
            <span class="graph">{{mini-pulse person_id=person.id}}</span>
            {{/link-to}}
        </li>
    {{/each}}
</ul>
